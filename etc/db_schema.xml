<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="michaleclipse_datacarrierscatalog_datacarrier" resource="default" engine="innodb" comment="Datacarriers Table">
        <column xsi:type="int" name="dc_id" unsigned="true" nullable="false" identity="true"
                comment="Data Carrier ID"/>
        <column xsi:type="varchar" name="name" nullable="false" length="32" comment="Data Carrier Name"/>
        <column xsi:type="varchar" name="type" nullable="false" length="32" comment="Data Carrier Type"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="dc_id"/>
        </constraint>
    </table>
</schema>
